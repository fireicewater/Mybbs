<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- 这里配置 所有的template模板 -->
	<definition name="bbs.basic" template="/WEB-INF/jsp/common/basic.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/common/header.jsp" />
		<put-attribute name="center" value="" />
		<put-attribute name="footer" value="/WEB-INF/jsp/common/header.jsp" />
	</definition>
	<definition name="*.*.*" extends="bbs.basic">
		<put-attribute name="center" value="/jsp/{1}/{2}/{3}.jsp" />
	</definition>
	<definition name="*.*" extends="bbs.basic">
		<put-attribute name="center" value="/jsp/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>